# Maintainer: Originull Software <packages@originull.org>
pkgname=hollywood-base
# pkgver 3rd octet should match pkgver in system/hollywood
pkgver=1.0.67
pkgrel=5
pkgdesc="Meta package for Hollywood OS"
url="https://originull.org"
arch="noarch"
license="MIT"
depends="acl
	adduser
	agetty
	apk-tools
	attr
	bash
	bash-completion
	btrfs-progs
	bzip2
	ca-certificates
	command-not-found
	connman
	coreutils
	cronie
	curl
	dbus-broker
	dash
	diffutils
	dmidecode
	dracut
	efibootmgr
	efivar
	file
	filesystem
	findutils
	gawk
	grep
	gzip
	hollywood-keys
	hostname
	iproute2
	iputils
	kbd
	kbd-bkeymaps
	kmod
	less
	libarchive-tools
	logrotate
	lsblk
	lvm2
	nano
	ncurses
	nfs-utils
	nftables
	openssh
	openssh-server
	pciutils
	plymouth
	plymouth-themes
	polkit
	procps
	psmisc
	rpcbind
	rsync
	run-parts
	rtkit
	screen
	sed
	sgdisk
	shadow
	shadow-login
	sysklogd
	systemd
	tmux
	tzdata
	usbutils
	util-linux
	vim
	wget
	which
	wpa_supplicant
	xz
	zip
	zlib
	zsh
	zstd
"

makedepends=""
install=""
subpackages=""
replaces="filesystem"
source=""

if [ $CARCH == "x86_64" ]; then
	depends="$depends intel-ucode amd-ucode"
fi
build() {
	return 0
}

package() {
	mkdir -p "$pkgdir"/etc
	# create /etc/hollywood-release
	echo $pkgver > "$pkgdir"/etc/hollywood-release
	local _ver="$(echo "$pkgver" | grep -E -o '^[0-9]+\.[0-9]+')"
	local _rel="v$_ver"
	case "$pkgver" in
	*_alpha*|*_beta*|*_pre*)
		_ver="$pkgver (edge)"
		_rel="edge"
		;;
	esac

	# create /etc/issue
	cat >"$pkgdir"/etc/issue<<EOF
Welcome to Hollywood $pkgver \\r on \\m (\\l)

If you are unintentionally seeing this instead of the GUI,
you may need to login as an administrative user and run:
sudo systemctl enable sddm

or review journalctl -xe for why the service failed to start.

Use another device to visit https://originull.org/hollywood/help
for further assistance.

EOF

	# create os-release
	cat >"$pkgdir"/etc/os-release<<EOF
NAME="Hollywood"
ID=Hollywood
VERSION_ID=$pkgver
PRETTY_NAME="Hollywood Edge"
HOME_URL="https://originull.org/"
BUG_REPORT_URL="https://originull.org/hollywood/bugs"
EOF
}
