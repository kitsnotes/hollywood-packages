#Maintainer: Originull Software <packages@originull.org>
pkgname=sddm
pkgver=0.19.98
pkgrel=8
pkgdesc="Simple Desktop Display Manager"
url="https://github.com/sddm/sddm/"
# armhf blocked by qt5-qtdeclarative
# s390x and riscv64 blocked by polkit -> upower
# riscv64 disabled due to missing rust in recursive dependency
arch="all !armhf !s390x !riscv64"
license="GPL-2.0-only"
depends="
	dbus
	systemd
	linux-pam>=1.4
	upower
	"
makedepends="
	systemd-dev
	extra-cmake-modules
	libxcb-dev
	linux-pam-dev
	py3-docutils
	qt5-qtbase-dev
	qt5-qtdeclarative-dev
	qt5-qttools-dev
	upower-dev
	utmps-dev
	"
subpackages="$pkgname-doc $pkgname-lang"
install="sddm.pre-install"
langdir="/usr/share/sddm/translations"
pkgusers="sddm"
pkggroups="sddm"
builddir="$srcdir/$pkgname"
source="
	https://depot.originull.org/upstream/sddm-git.tar.gz
	10-hollywood.conf
	0001-pam-path-fix.patch
	99-hollywood-temp-fix.patch
	"

# secfixes:
#   0.19.0-r0:
#     - CVE-2020-28049

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_MAN_PAGES=ON \
		-DENABLE_JOURNALD=OFF \
		-DNO_SYSTEMD=OFF \
		-DUID_MIN=500 \
		-DUID_MAX=65000 \
		-DDBUS_CONFIG_DIR=/usr/share/dbus-1/system.d
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 "$srcdir"/10-hollywood.conf "$pkgdir"/etc/sddm.conf.d/10-hollywood.conf
}

