#Maintainer: Originull Software <packages@originull.org>
pkgname=sddm
pkgver=0.20.0
pkgrel=3
pkgdesc="Simple Desktop Display Manager"
url="https://github.com/sddm/sddm/"
arch="all"
license="GPL-2.0-only"
depends="
	dbus
	systemd
	linux-pam>=1.4
	upower
	"
makedepends="
	systemd-dev
	extra-cmake-modules
	libxcb-dev
	linux-pam-dev
	py3-docutils
	qt6-qtbase-dev
	qt6-qtdeclarative-dev
	qt6-qttools-dev
	upower-dev
	"
subpackages="$pkgname-doc $pkgname-lang"
install="sddm.pre-install"
langdir="/usr/share/sddm/translations"
pkgusers="sddm"
pkggroups="sddm"
source="
	$pkgname-$pkgver.tar.gz::https://github.com/$pkgname/$pkgname/archive/refs/tags/v$pkgver.tar.gz
	hollywood-env.patch
	10-hollywood.conf
	"

# secfixes:
#   0.19.0-r0:
#     - CVE-2020-28049

build() {
	cmake -B build \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_WITH_QT6=ON \
		-DBUILD_MAN_PAGES=ON \
		-DENABLE_JOURNALD=ON \
		-DNO_SYSTEMD=OFF \
		-DUID_MIN=1000 \
		-DUID_MAX=65000 \
		-DDBUS_CONFIG_DIR=/usr/share/dbus-1/system.d
	cmake --build build
}

check() {
	cd build
	CTEST_OUTPUT_ON_FAILURE=TRUE ctest
}

package() {
	DESTDIR="$pkgdir" cmake --install build

	install -Dm644 "$srcdir"/10-hollywood.conf "$pkgdir"/etc/sddm.conf.d/10-hollywood.conf
}

