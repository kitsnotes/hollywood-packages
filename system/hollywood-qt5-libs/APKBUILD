# Maintainer: Originull Software <packages@originull.org>
pkgname=hollywood-qt5-libs
pkgver=1.0
pkgrel=42
pkgdesc="Hollywood Qt5 Support Integration Libraries"
url="https://originull.org"
arch="all"
options="!check" # no test suite
license="LGPL2"
depends="qt5-qtbase qt5-qtwayland qt5-qtmultimedia"
makedepends="qt5-qtwayland-dev qt5-qtmultimedia-dev"
source="https://depot.originull.org/upstream/hollywood-desktop-$pkgver.tar.gz"
builddir="$srcdir/hollywood-desktop-$pkgver/desktop/"

build() {
        cd $builddir/
        /usr/lib/qt5/bin/qmake
	make
}

package() {
        cd $builddir/
        make INSTALL_ROOT="$pkgdir" install
}

sha512sums="
