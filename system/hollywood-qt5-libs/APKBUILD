# Contributor: The Cat <cat@originull.org>
# Maintainer: The Cat <cat@originull.org>
pkgname=hollywood-qt5-libs
pkgver=1.0
pkgrel=33
pkgdesc="Hollywood Qt5 Support Integration Libraries"
url="https://originull.org"
arch="all"
options="!check" # no test suite
license="LGPL2"
depends="qt5-qtbase qt5-qtwayland"
makedepends="qt5-qtwayland-dev"
source="http://depot.originull.org/upstream/hollywood-desktop-$pkgver.tar.gz"
builddir="$srcdir/hollywood-desktop-$pkgver"

build() {
	cd $builddir/libcompositor
	/usr/lib/qt5/bin/qmake
	make || true
	make

        cd $builddir/libcommdlg
        /usr/lib/qt5/bin/qmake
        make || true
	make

        cd $builddir/platformtheme
        /usr/lib/qt5/bin/qmake
        make

	cd $builddir/platformplugin
        /usr/lib/qt5/bin/qmake
        make

	cd $builddir/style
        /usr/lib/qt5/bin/qmake
        make
}

package() {
	cd $builddir/libcompositor
	make INSTALL_ROOT="$pkgdir" install

        cd $builddir/libcommdlg
        make INSTALL_ROOT="$pkgdir" install

        cd $builddir/platformtheme
        make INSTALL_ROOT="$pkgdir" install

        cd $builddir/platformplugin
        make INSTALL_ROOT="$pkgdir" install

        cd $builddir/style
        make INSTALL_ROOT="$pkgdir" install
}

sha512sums="
37cf3bcbc41a7f8d51c0bfab08884ae0818a439061b15e66a0a463a133572fb11a9e57ffe260cc3a6f09514d9b177740a75de6b223a4b72c3a4b8fc9e4d52bea  hollywood-desktop-1.0.tar.gz
"
