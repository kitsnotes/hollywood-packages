# Maintainer: Originull Software <packages@originull.org>
pkgname=nftables
pkgver=1.0.1
pkgrel=2
pkgdesc="Netfilter tables userspace tools"
url="https://netfilter.org/projects/nftables"
arch="all"
license="GPL-2.0-or-later"
makedepends="
	asciidoc
	bison
	docbook2x
	flex
	gmp-dev
	jansson-dev
	libmnl-dev
	libnftnl-dev
	ncurses-dev
	readline-dev
	"
install="$pkgname.post-upgrade"
subpackages="$pkgname-static $pkgname-dev $pkgname-doc"
source="https://netfilter.org/projects/nftables/files/nftables-$pkgver.tar.bz2
	nftables.service
	nftables.nft
	"
builddir="$srcdir/$pkgname-$pkgver"

prepare() {
	default_prepare
	sed -i '1i#include "config.h"' "$builddir"/src/proto.c
}

build() {
	CONFIG_MAN=y DB2MAN=docbook2x-man ./configure \
		--build=$CBUILD \
		--host=$CHOST \
		--prefix=/usr \
		--sysconfdir=/usr/share \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-json \
		--with-cli=readline
	make
}

package() {
	make DESTDIR="$pkgdir" install

	install -Dm644 "$srcdir"/$pkgname.service -t "$pkgdir"/usr/lib/systemd/system/
	install -Dm644 "$srcdir"/nftables.nft "$pkgdir"/etc/nftables.nft
	install -dm755 "$pkgdir"/etc/nftables.d
}

