# Maintainer: Natanael Copa <ncopa@alpinelinux.org>
pkgname=zlib
pkgver=1.2.13
pkgrel=3
pkgdesc="A compression/decompression Library"
arch="all"
license="Zlib"
url="https://zlib.net/"
subpackages="$pkgname-static $pkgname-doc $pkgname-dev"
source="https://zlib.net/zlib-$pkgver.tar.gz
	configure-Pass-LDFLAGS-to-link-tests.patch
	"
# secfixes:
#   1.2.11-r4:
#     - CVE-2018-25032

build() {
	# we trade size for a little more speed.
	export CFLAGS="$CFLAGS -O2"
	CHOST="$CHOST" ./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--shared
	make
}

check() {
	make check
}

dev() {
        default_dev
        mv "$subpkgdir"/usr/lib/libz.so \
                "$pkgdir"/usr/lib/
}

package() {
	make install \
		pkgconfigdir="/usr/lib/pkgconfig" \
		DESTDIR="$pkgdir"
}

sha512sums="
