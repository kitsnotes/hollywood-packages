# Maintainer: Originull Software <packages@originull.org>
pkgname=webkit
pkgver=2.39.5
pkgrel=0
pkgdesc="WebKit port optimized for embedded devices"
url="https://wpewebkit.org"
arch="all !x86 !riscv64" # x86: Out of memory, riscv64: fails to link
license="other"
makedepends="
	at-spi2-atk-dev
	atk-dev
	bubblewrap
	qt5-qtbase-dev
	qt6-qtbase-dev
	qt5-qtdeclarative-dev
	qt6-qtdeclarative-dev
	cairo-dev
	cmake
	gperf
	gst-plugins-base-dev
	harfbuzz-dev
	lcms2-dev
	libavif-dev
	libepoxy-dev
	libgcrypt-dev
	libseccomp-dev
	libsoup3-dev
	libtasn1-dev
	libwpe-dev
	libwpebackend-fdo-dev
	libxkbcommon-dev
	libxslt-dev
	ninja
	openjpeg-dev
	perl
	ruby-dev
	unifdef
	wayland-dev
	wayland-protocols
	woff2-dev
	xdg-dbus-proxy
	"
subpackages="$pkgname-dev"
builddir="$srcdir/wpewebkit-$pkgver"
source="https://wpewebkit.org/releases/wpewebkit-$pkgver.tar.xz
	hollywood-user-agent.patch
	"

build() {
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake -B build \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DBUILD_SHARED_LIBS=True \
		-DCMAKE_BUILD_TYPE=None \
		-DPORT=WPE \
		-DUSE_GSTREAMER_TRANSCODER=Off \
		-DENABLE_MINIBROWSER=On \
		-DENABLE_WPE_QT_API=On \
		-DENABLE_GTKDOC=Off \
		-DENABLE_INTROSPECTION=Off \
		-DUSE_SOUP3=On \
		-DUSE_SYSTEMD=Off \
		-DENABLE_WPE_QT=ON \
		-GNinja \
		$CMAKE_CROSSOPTS .
	cmake --build build
}

package() {
	DESTDIR="$pkgdir" cmake --install build
}

