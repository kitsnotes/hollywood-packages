# Maintainer: Originull Software <packages@originull.org>
pkgname=perl-dbix-dbschema
pkgver=0.47
pkgrel=0
pkgdesc="DBIx::DBSchema perl module"
url="https://metacpan.org/release/DBIx-DBSchema/"
arch="noarch"
license="GPL-2.0 or Artistic"
depends="perl perl-dbi"
subpackages="$pkgname-doc"
source="https://cpan.metacpan.org/authors/id/I/IV/IVAN/DBIx-DBSchema-$pkgver.tar.gz"
builddir="$srcdir"/DBIx-DBSchema-$pkgver

build() {
	PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
	make
}

check() {
	make test
}

package() {
	make DESTDIR="$pkgdir" install
	find "$pkgdir" \( -name perllocal.pod -o -name .packlist \) -delete
}

sha512sums="f40342d586f3c2665c3eb38cd52bb47ed33fde18363d3377e47b63be5262e542e140ac45b5ed059b9b8d41d50bb04d2de6c51ef1cb8c8a35a55ec969dca8673f  DBIx-DBSchema-0.47.tar.gz"
