        mkdir -p "$subpkgdir"/usr/bin
        mkdir -p "$subpkgdir"/usr/lib
	mkdir -p "$subpkgdir"/usr/libexec/hollywood/helpers
	mkdir -p "$subpkgdir"/usr/libexec/hollywood/settings
        mkdir -p "$subpkgdir"/usr/share/applications
	mkdir -p "$subpkgdir"/usr/share/wayland-sessions
	mkdir -p "$subpkgdir"/usr/share/polkit-1/actions

	mv "$pkgdir"/usr/libexec/hollywood/helpers/sysmon "$subpkgdir"/usr/libexec/hollywood/helpers/
	mv "$pkgdir"/usr/libexec/hollywood/notificationd "$subpkgdir"/usr/libexec/hollywood/
	mv "$pkgdir"/usr/libexec/hollywood/session "$subpkgdir"/usr/libexec/hollywood/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib49-sys-update.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib50-datetime.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib10-defaults.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib56-efiboot.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib01-general.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib51-displays.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib54-network.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib52-keyboard.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib53-mouse.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib02-wallpaper.so "$subpkgdir"/usr/libexec/hollywood/settings/
	mv "$pkgdir"/usr/libexec/hollywood/settings/lib08-regionlaguage.so "$subpkgdir"/usr/libexec/hollywood/settings/
