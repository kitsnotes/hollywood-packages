pkgver=1.0
pkgrel=51
pkgdesc="Hollywood Desktop"
url="https://originull.org"
arch="all"
options="!check" # no test suite
license="GPL2"
makedepends="qt6-qtwayland-dev 
	qt6-qtmultimedia-dev
	avahi-dev
	libinput-dev
	libdrm-dev
	elogind-dev
	libapk-qt-dev 
	mesa-dev
	poppler-dev
	djvulibre-dev
	libspectre-dev
	efivar-dev
	mtdev-dev
	hunspell-dev
	qt6-qtermwidget-dev
	qt6-polkit-qt-1-dev 
	qt6-qtsvg-dev
	qt6-qt5compat-dev
	qt6-qtcharts-dev
	bcnm-dev
	boost-dev
	cmake
	curl-dev
	eudev-dev
	libarchive-dev
	linux-headers
	parted-dev
	skalibs-dev
	util-linux-dev
	dosfstools
	btrfs-progs-libs
	libcap-dev
	libxkbfile-dev
"

source="https://depot.originull.org/upstream/hollywood-desktop-$pkgver.tar.gz
	hollywood.conf
	fontconfig.conf
	"
builddir="$srcdir/hollywood-desktop-$pkgver/"
subpackages="$pkgname-baselibs $pkgname-desktop $pkgname-setup $pkgname-image $pkgname-accessories $pkgname-dbg $pkgname-dev $pkgname-doc"

build() {
	# Build the hollywood desktop
	cd $builddir/desktop/
	/usr/lib/qt6/bin/qmake
	make

	
	# Build our installer
	cd $builddir/installer/
	if [ "$CBUILD" != "$CHOST" ]; then
		CMAKE_CROSSOPTS="-DCMAKE_SYSTEM_NAME=Linux -DCMAKE_HOST_SYSTEM_NAME=Linux"
	fi
	cmake \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DBUILD_TOOLS=ON \
		-DCMAKE_BUILD_TYPE=RelWithDebugInfo \
		-DCMAKE_CXX_FLAGS="$CXXFLAGS -Wno-format-truncation" \
		-DCMAKE_C_FLAGS="$CFLAGS" \
		-DINSTALL=ON \
		-DBUILD_ISO=ON \
		${CMAKE_CROSSOPTS} \
		-Bbuild
	make -C build
}

check() {
	# Do checks for installer
	CTEST_OUTPUT_ON_FAILURE=TRUE make -C build test
}

package() {
	cd $builddir/desktop/
	make INSTALL_ROOT="$pkgdir" install

	cd $builddir/installer/
	make DESTDIR="$pkgdir" -C build install
}

accessories() {
	pkgdesc="Hollywood Accessories"
	depends="hollywood-desktop hunspell hunspell-lang hunspell-en djvulibre libspectre poppler"
	mkdir -p "$subpkgdir"/usr/bin
	mkdir -p "$subpkgdir"/usr/lib/popular
	mkdir -p "$subpkgdir"/usr/share/popular
	mkdir -p "$subpkgdir"/usr/share/applications
	mkdir -p "$subpkgdir"/usr/share/icons/hicolor/scalable/apps
	mkdir -p "$subpkgdir"/usr/share/metainfo
	mv "$pkgdir"/usr/lib/popular/libqpdfview_pdf.so  "$subpkgdir"/usr/lib/popular/
	mv "$pkgdir"/usr/lib/popular/libqpdfview_ps.so "$subpkgdir"/usr/lib/popular/
	mv "$pkgdir"/usr/lib/popular/libqpdfview_djvu.so "$subpkgdir"/usr/lib/popular/
	mv "$pkgdir"/usr/lib/popular/libqpdfview_image.so "$subpkgdir"/usr/lib/popular/
	mv "$pkgdir"/usr/bin/startext "$subpkgdir"/usr/bin/
	mv "$pkgdir"/usr/bin/hwcalc "$subpkgdir"/usr/bin/
	mv "$pkgdir"/usr/bin/popular "$subpkgdir"/usr/bin/
	mv "$pkgdir"/usr/share/applications/org.originull.startext.desktop "$subpkgdir"/usr/share/applications/
	mv "$pkgdir"/usr/share/applications/org.originull.calculator.desktop  "$subpkgdir"/usr/share/applications/
	mv "$pkgdir"/usr/share/applications/org.originull.popular.desktop  "$subpkgdir"/usr/share/applications/
	mv "$pkgdir"/usr/share/popular/*.html "$subpkgdir"/usr/share/popular/
	mv "$pkgdir"/usr/share/icons/hicolor/scalable/apps/qpdfview.svg "$subpkgdir"/usr/share/icons/hicolor/scalable/apps/
	mv "$pkgdir"/usr/share/metainfo/qpdfview.appdata.xml "$subpkgdir"/usr/share/metainfo/
}

desktop() {
	pkgdesc="Hollywood Desktop"
	depends="hollywood-baselibs
	desktop-file-utils
        qt6-qtbase
        qt6-qtwayland
        libapk-qt
        efivar
        accountsservice
	bolt
	bluez
	hollywood-qt5-libs
        efibootmgr
        sddm
        wireplumber
        pipewire
        pipewire-pulse
        wireplumber-logind
        rtkit
        pulseaudio-client
        qt6-qtmultimedia"

	replaces="hollywood"

	mkdir -p "$subpkgdir"/usr/share/wallpapers/
        cp -ra "$builddir"/desktop/assets/wallpapers/* "$subpkgdir"/usr/share/wallpapers
        find "$subpkgdir"/usr/share/wallpapers -type d -exec chmod 755 {} \;
        find "$subpkgdir"/usr/share/wallpapers -type f -exec chmod 644 {} \;

        mkdir -p "$subpkgdir"/usr/share/sounds/Hollywood
        cp -ra "$builddir"/desktop/assets/sounds/* "$subpkgdir"/usr/share/sounds/Hollywood

        mkdir -p "$subpkgdir"/usr/share/icons/breeze/apps/16
        mkdir -p "$subpkgdir"/usr/share/icons/breeze-dark/apps/16

        cp -a "$builddir"/desktop/assets/hollywood-logo-dark.svg "$subpkgdir"/usr/share/icons/breeze-dark/apps/16/hollywood-logo.svg
