# Maintainer: Originull Software <packages@originull.org>
pkgname=sssd
pkgver=2.9.3
pkgrel=1
pkgdesc="System Security Services Daemon"
url="https://github.com/SSSD/sssd"
arch="x86_64"
license="GPL-3.0-or-later"

# TODO: the full test suite depends on these
#	but does not pass.
#checkdepends="
#	check-dev
#	cmocka-dev
#	"

depends="
	autofs
	bind
	curl
	cyrus-sasl-gssapiv2
	"
makedepends="
	autoconf
	automake
	bash
	bind-tools
	c-ares-dev
	cifs-utils-dev
	curl-dev
	dbus-dev
	ding-libs-dev
	docbook-xsl
	gettext-dev
	glib-dev
	http-parser-dev
	jansson-dev
	jose-dev
	keyutils-dev
	krb5-dev
	ldb-dev
	libtool
	libunistring-dev
	libxml2-utils
	libxslt
	linux-pam-dev
	nss-dev
	openldap-dev
	p11-kit-dev
	pcre2-dev
	popt-dev
	py3-setuptools
	python3-dev
	samba-dev
	talloc-dev
	tdb-dev
	tevent-dev
	"
subpackages="$pkgname-dev py3-$pkgname-pyc py3-$pkgname:py3 $pkgname-openrc"
source="https://github.com/SSSD/sssd/releases/download/$pkgver/sssd-$pkgver.tar.gz
	"

build() {
	./configure \
		--prefix=/usr \
		--sbindir=/usr/sbin \
		--sysconfdir=/etc \
		--localstatedir=/var \
		--libexecdir=/usr/lib/sssd \
		--datadir=/usr/share \
		--enable-pammoddir=/lib/security \
		--with-pid-path=/run \
		--disable-cifs-idmap-plugin \
		--disable-rpath \
		--disable-static \
		--without-manpages \
		--without-nfsv4-idmapd-plugin \
		--without-python2-bindings \
		--without-selinux \
		--without-semanage
	make
}

check() {
	make check
}

package() {
	make -j1 DESTDIR="$pkgdir" install


	# shellcheck disable=SC2115
	rm -r "$pkgdir"/usr/share
	rm -r "$pkgdir"/run
}

py3() {
	amove usr/lib/python*
}

sha512sums="
