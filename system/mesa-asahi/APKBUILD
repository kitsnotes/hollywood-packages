# Maintainer: Originull Software <packages@originull.org>
pkgname=mesa-asahi
_asahiver=20230904
_commit=asahi-$_asahiver
pkgver=23.3.0_pre$_asahiver
pkgrel=0
pkgdesc="Mesa DRI OpenGL library (Asahi Linux development version)"
url="https://www.mesa3d.org"
arch="aarch64"
license="MIT SGI-B-2.0 BSL-1.0"
subpackages="
	$pkgname-dbg
	"
_llvmver=16
depends_dev="
	libdrm-dev
	libxext-dev
	libxdamage-dev
	libxcb-dev
	libxshmfence-dev
	"
makedepends="
	$depends_dev
	bison
	systemd-dev
	expat-dev
	findutils
	flex
	gettext
	elfutils-dev
	glslang-dev
	libtool
	libxfixes-dev
	libva-dev
	libvdpau-dev
	libx11-dev
	libxml2-dev
	libxrandr-dev
	libxvmc-dev
	libxxf86vm-dev
	llvm$_llvmver-dev
	libglvnd-dev
	meson
	libunwind-dev
	py3-mako
	python3
	vulkan-headers
	vulkan-loader-dev
	wayland-dev
	libomxil-bellagio-dev
	wayland-protocols
	xorgproto
	zlib-dev
	zstd-dev
	"
source="
	https://gitlab.freedesktop.org/asahi/mesa/-/archive/$_commit/mesa-$_commit.tar.gz
	"
replaces="mesa-dricore mesa"
provides="mesa"
options="!check" # we skip tests intentionally
provides="opengl"
_dri_driverdir=/usr/lib/dri
_gallium_drivers="r300,r600,radeonsi,nouveau,swrast,virgl,zink,vc4,v3d,freedreno,kmsro,lima,panfrost,etnaviv,tegra,asahi"
_vulkan_drivers="amd,broadcom,freedreno,panfrost"
_vulkan_layers="device-select,overlay"

builddir="$srcdir/mesa-$_commit"
build() {

	abuild-meson \
		-Dgallium-drivers=$_gallium_drivers \
		-Dvulkan-drivers=$_vulkan_drivers \
		-Dvulkan-layers=$_vulkan_layers \
		-Dplatforms=x11,wayland \
		-Ddri-drivers-path=$_dri_driverdir \
		    -D egl=enabled \
		    -D gallium-extra-hud=true \
    -D gallium-nine=true \
    -D gallium-omx=bellagio \
    -D gallium-va=enabled \
    -D gallium-vdpau=enabled \
    -D gallium-xa=enabled \
    -D gbm=enabled \
    -D gles1=disabled \
    -D gles2=enabled \
    -D glvnd=true \
    -D glx=dri \
    -D libunwind=enabled \
    -D llvm=enabled \
    -D lmsensors=disabled \
    -D osmesa=true \
    -D shared-glapi=enabled \
    -D microsoft-clc=disabled \
		-Drust_std=2021 \
		-Dvideo-codecs=h264dec,h264enc,h265dec,h265enc \
	$_arch_opts \
	 output

	# Print config
	meson configure output

	# parallel build workaround
	ninja -C output src/compiler/nir/nir_intrinsics.h

	meson compile ${JOBS:+-j ${JOBS}} -C output
}

package() {
	DESTDIR="$pkgdir" meson install --no-rebuild -C output
	# remove development stuff, provided by main mesa package
	rm -rf "$pkgdir"/usr/include
	rm -rf "$pkgdir"/usr/lib/pkgconfig
}

sha512sums="
